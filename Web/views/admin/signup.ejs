<!-- Signup Form -->
<div class="row">
	<div class="col-xs-12">
		<div class="text-center" style="padding:50px 0">
			<!-- Main Form -->
			<div class="login-form-1">
				<form id="login-form" method="post" class="text-left" enctype="multipart/form-data">
					<div class="main-login-form">
						<div class="login-group">
							<h3>할머니 등록</h3>
							<div class="form-group">
								<label for="lg_name" class="sr-only">이름</label>
								<input type="text" class="form-control" id="lg_name" name="lg_name" placeholder="이름">
							</div>
							<div class="form-group">
								<label for="lg_address" class="sr-only">주소</label>
								<input type="text" class="form-control" id="lg_address" name="lg_address" placeholder="주소">
							</div>
							<div class="form-group" id="photo-input">
								<i class="glyphicon glyphicon-camera"></i>
								<input type="file" name="file" id="file" />
							</div>
							<h3>후원자 등록</h3>
							<div class="form-group">
								<label for="lg_phoneNo" class="sr-only">전화번호</label>
								<input type="text" class="form-control" id="lg_phoneNo" name="lg_phoneNo" placeholder="전화번호">
							</div>
							<div class="form-group">
								<label for="lg_email" class="sr-only">이메일</label>
								<input type="text" class="form-control" id="lg_email" name="lg_email" placeholder="이메일">
							</div>
						</div>
						<button type="submit" class="login-button" onClick="enertalkLogin();" ><i class="glyphicon glyphicon-hand-right"></i></button>
						<button type="submit" class="photo-button" onClick="sendDataTo();" ><i class="glyphicon glyphicon-hand-right"></i></button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
